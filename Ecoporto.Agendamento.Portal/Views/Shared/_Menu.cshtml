@using Ecoporto.Agendamento.Portal.Extensions
<header style="height:40px;">
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <a class="navbar-brand mr-0" href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content("~/Content/img/logo-ecoporto.png")" class="d-inline-block align-top" alt="">
                </a>
                <ul class="navbar-nav mr-auto ml-5 top-menu">

                    <li><a class="nav-link" href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i>Home</a></li>

                </ul>


                <form id="frmBusca" class="form-inline my-2 my-lg-0 mr-2 top-menu" style="color: #fff; font-weight:bold;">
                    @*<input id="btnPesquisaSite" class="form-control form-control-sm mr-4 icone" type="text" placeholder="Pesquisar..." aria-label="Search">*@
                    <span class="nav-link-yellow">@User.ObterDespachanteDescricao() - @User.ObterDespachanteCnpj()</span>
                </form>
                <div class="btn-group left-content">

                    <button type="button" class="btn btn-light btn-sm dropdown-toggle top-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Olá, <strong>@User.Identity.Name</strong>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="@Url.Action("Logout", "Home")">Sair</a>
                    </div>
                </div>

            </div>
        </div>
    </nav>

</header>